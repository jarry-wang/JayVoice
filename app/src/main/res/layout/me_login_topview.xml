<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/page_gray"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/me_login_top_img"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:background="@drawable/me_bg_top" 
        android:scaleType="centerCrop"
        />

    <cn.join.android.ui.widget.CircleImageView
        android:id="@+id/me_login_top_headimg"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/userpic"
         />

    <TextView
        android:id="@+id/me_login_top_nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/me_login_top_img"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@+id/me_login_top_headimg"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:textSize="@dimen/title_textsize"
        android:text="" />

</RelativeLayout>
