<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
    <ImageView 
        android:id="@+id/notification_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_launcher"/>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/notification_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        >
    <TextView 
        android:id="@+id/notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"             
        android:maxLines="1"
        android:textColor="@android:color/background_dark"
        android:text="TITLE"/>
    <TextView 
        android:id="@+id/notification_arties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@android:color/darker_gray"
        android:text="ARTISE"/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/notification_button_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView 
            android:id="@+id/notification_play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_zanting"
            android:clickable="true"
            />
        <ImageView 
            android:id="@+id/notification_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_next"
            android:clickable="true"
            />
        <ImageView 
            android:id="@+id/notification_cacel"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_cha"
            android:clickable="true"
            />
    </LinearLayout>

</RelativeLayout>
