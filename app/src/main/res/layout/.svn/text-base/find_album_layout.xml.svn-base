<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:layout_centerVertical="true"
        >
		<View android:layout_width="5dp"
		    android:layout_height="match_parent"
		    android:background="@color/greentab"
		    
		    />
        <TextView
            android:id="@+id/textView_album_singer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/content_textsize_l"
            android:visibility="gone"
            android:text="周杰伦" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="@string/music_album" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/change_album_type_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_alignParentRight="true"
        android:gravity="center"      
        >
        <ImageView android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_qiehuan"
            />
        <TextView
            android:id="@+id/change_album_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/content_textsize_m"
            android:textColor="@color/text_bg"
            android:text="@string/change_to_cartoon" />
     </LinearLayout>
    </RelativeLayout>
    <GridView
        android:id="@+id/gridview_album"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:horizontalSpacing="8dp"
        android:numColumns="3"
        android:verticalSpacing="15dp" 
        android:listSelector="#00000000"
        android:scrollbarStyle="outsideOverlay"
        >
</GridView>

</LinearLayout>
