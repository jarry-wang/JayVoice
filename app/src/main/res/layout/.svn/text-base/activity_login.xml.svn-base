<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_bg"
    android:gravity="center_horizontal"
     >
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:addStatesFromChildren="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

		<TextView  
		    android:id="@+id/menu_left_view"
		    android:drawablePadding="3dp"
		    android:drawableLeft="@drawable/ic_menu_arrow"
		    android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:clickable="true"
            android:onClick="onBack"
            android:textSize="@dimen/top_menu_left_textsize"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/left_padding"/>
		<LinearLayout
        	android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.0"
        	android:gravity="center" 
        	android:orientation="horizontal"
        >
         <TextView
            android:id="@+id/menu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:textColor="@color/white"
            android:textSize="@dimen/top_menu_center_textsize"
            android:text="@string/pleaselogin"
             />
        </LinearLayout>       	       
	    <LinearLayout
	        android:id="@+id/menu_right_layout"
	        android:layout_width="60dp"
	        android:layout_height="wrap_content"
	        android:paddingRight="@dimen/right_padding"
	        android:gravity="center_vertical|right"
	        android:onClick="onRightDone"
	        android:orientation="vertical"
	        >
	    </LinearLayout>    
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1.0"
    android:orientation="vertical"
    android:gravity="center"
     >
<LinearLayout
    android:id="@+id/qq_logon_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
     >
    <ImageView
        android:id="@+id/imageView_qq"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_qq" />

    <TextView
        android:id="@+id/textView_qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:textSize="@dimen/title_textsize"
        android:text="@string/qq_login" />
</LinearLayout>
<LinearLayout
    android:id="@+id/weixin_logon_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="55dp"
    android:orientation="vertical"
    android:gravity="center"
    android:visibility="gone"
     >
    <ImageView
        android:id="@+id/imageView_weixin"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_weixin" />

    <TextView
        android:id="@+id/textView_weixin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:textSize="@dimen/title_textsize"
        android:text="@string/weixin_login" />
</LinearLayout>
</LinearLayout>
</LinearLayout>
